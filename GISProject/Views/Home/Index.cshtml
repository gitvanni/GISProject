@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GIS Project</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
        }

        .home-header {
            background-color: #0d6efd;
            color: white;
            padding: 2rem 1rem;
            text-align: center;
        }

        main {
            padding: 3rem 1rem;
            text-align: center;
        }

        .btn-lg {
            min-width: 200px;
        }

        footer {
            background-color: #f1f1f1;
            text-align: center;
            padding: 1rem;
            border-top: 1px solid #ccc;
        }
    </style>
</head>
<body>
   
        <div class="home-header">
            <h1>Benvenuto su GIS Explorer</h1>
            <p class="lead">Il tuo strumento per esplorare sentieri e punti di interesse geografici</p>
        </div>
       
   

    <main>
        <h2>Inizia a esplorare</h2>
        <p class="mb-4">Utilizza i pulsanti qui sotto per accedere alle funzionalità principali del sistema.</p>

        <div class="d-flex justify-content-center gap-4 flex-wrap">
            <a asp-controller="Trails" asp-action="Index" class="btn btn-outline-primary btn-lg">Visualizza Sentieri</a>
            <a asp-controller="PointsOfInterests" asp-action="Index" class="btn btn-outline-success btn-lg">Punti di Interesse</a>
        </div>
    </main>

  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

